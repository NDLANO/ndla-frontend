{
  "presets": [
    [
      "razzle",
      {
        "preset-react": {
          "runtime": "automatic",
          "importSource": "@emotion/react"
        }
      }
    ]
  ],

  "plugins": [
    ["@emotion", { "autoLabel": "always" }],
    "graphql-tag",
    "@babel/plugin-proposal-optional-chaining"
  ],
  "env": {
    "development": {
      "plugins": [
        ["@emotion", { "autoLabel": "always" }],
        "graphql-tag",
        "@babel/plugin-proposal-optional-chaining",
        "react-refresh/babel"
      ]
    }
  }
}
