{
  "name": "ndla-frontend",
  "version": "0.1.16",
  "description": "NDLA Frontend",
  "scripts": {
    "build-server": "babel server -d htdocs/server --ignore __tests__/ && babel src -d htdocs/src --ignore __tests__/",
    "build-client": "cross-env NODE_ENV=production webpack --config ./webpack.config.prod.js -p --bail",
    "build": "yarn build-server && yarn build-client",
    "clean": "rimraf ./htdocs/*",
    "test": "cross-env NODE_ENV=unittest jest",
    "test-ci": "cross-env NODE_ENV=unittest jest --maxWorkers=2",
    "tdd": "cross-env NODE_ENV=unittest jest --watch",
    "lint": "yarn run lint-prettier && eslint --ext .js --ext .jsx src server",
    "lint-prettier": "node prettier.js lint",
    "start": "cross-env NODE_ENV=development DISABLE_SSR=true nodemon server --exec babel-node --watch server | bunyan",
    "start-with-local-converter": "cross-env NODE_ENV=development DISABLE_SSR=true LOCAL_ARTICLE_CONVERTER=true nodemon server --exec babel-node --watch server | bunyan",
    "start-with-ssr": "cross-env NODE_ENV=development nodemon server --exec babel-node --watch server | bunyan",
    "start-prod": "cross-env NODE_ENV=production node htdocs/server | bunyan",
    "now-build": "npm run build-server && npm run build-client",
    "now-start": "cross-env NODE_ENV=production NOW=true node htdocs/server",
    "prebuild": "npm run clean",
    "pretest": "npm run lint",
    "prettier": "node prettier.js write"
  },
  "jest": {
    "testRegex": "/__tests__/.*-test.(js|jsx)$",
    "setupFiles": [
      "./src/__tests__/_initTestEnv.js"
    ]
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
