{
  "version": 2,
  "builds": [
    {
      "src": "build/public/**",
      "use": "@now/static"
    },
    {
      "src": "build/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": { "cache-control": "s-maxage=86400" },
      "dest": "build/public/static/$1"
    },
    {
      "src": "/favicon.ico",
      "headers": { "cache-control": "s-maxage=86400" },
      "dest": "build/public/favicon.ico"
    },
    { "src": "/(.*)", "dest": "/build/server.js" }
  ],
  "env": {
    "NDLA_ZENDESK_WIDGET_KEY": "@ndla_zendesk_widget_key"
  }
}
